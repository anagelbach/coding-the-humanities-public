---
title: "Blog"
layout: "default"
isPage: true
---
{{#each pages.data.posts}}
<nav class="sidebar">
  <ul class="metadata">
    <li><span>Author: </span>{{author}}</li>
    <li><span>Date of Publication: </span>{{publicationDate date}}</li>
    <li><span>Tags: </span>{{tagString tags}}</li>
  </ul>
</nav>
<article class="content">
  <section class="post">
    <header>
      <h1>{{title}}</h1>
    </header>
    <div class="cover-image">
      <img src="{{cover-image}}"></img>
    </div>
    <section class="post-content">
      {{{ contentRenderedWithoutLayouts }}}
    </section>
  </section>
</article>
{{/each}} 
